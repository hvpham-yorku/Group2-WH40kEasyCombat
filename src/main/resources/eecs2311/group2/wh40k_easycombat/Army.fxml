   <left>
      <VBox prefHeight="800.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="350.0" text="Select Faction" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="factionCBbox" prefHeight="47.0" prefWidth="350.0" />
            <Label prefHeight="15.0" prefWidth="401.0" />
            <Button fx:id="confirmButton" mnemonicParsing="false" prefHeight="29.0" prefWidth="350.0" text="Confirm">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Label prefHeight="3.0" prefWidth="350.0" />
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="350.0" text="Select Unit" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TreeTableView fx:id="unitSectionTreeTable" prefHeight="590.0" prefWidth="350.0">
              <columns>
                <TreeTableColumn fx:id="selectUnit" editable="false" prefWidth="268.0" text="Units" />
                  <TreeTableColumn fx:id="selectPoint" prefWidth="79.0" text="Points" />
              </columns>
            </TreeTableView>
            <Label />
         </children>
      </VBox>
   </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="armyTable" layoutX="137.0" layoutY="79.0" prefHeight="603.0" prefWidth="339.0">
              <columns>
                <TableColumn fx:id="unit" editable="false" prefWidth="258.0" text="Unit" />
                  <TableColumn fx:id="point" editable="false" text="Points" />
              </columns>
            </TableView>
            <Button fx:id="addButton" layoutX="14.0" layoutY="289.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="105.0" text="Add">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="removeButton" layoutX="137.0" layoutY="689.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="105.0" text="Remove">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <ComboBox fx:id="datachmentCBbox" layoutX="565.0" layoutY="58.0" prefHeight="36.0" prefWidth="206.0" />
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="557.0" layoutY="27.0" text="Choose Your Detachment">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="582.0" layoutY="116.0" text="Name of your Army">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="armyNametxt" layoutX="565.0" layoutY="151.0" prefHeight="29.0" prefWidth="206.0">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <ComboBox fx:id="sizeCBbox" layoutX="286.0" layoutY="27.0" prefHeight="33.0" prefWidth="150.0" promptText="2000" />
            <Label layoutX="176.0" layoutY="32.0" text="Battle Size:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="setWarlordButton" layoutX="370.0" layoutY="689.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="105.0" text="Set Warlord">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label layoutX="638.0" layoutY="189.0" text="Points">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="pointNumber" layoutX="638.0" layoutY="219.0" text="2000">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="saveButton" layoutX="615.0" layoutY="269.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="105.0" text="Save">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="CancelButton" layoutX="615.0" layoutY="329.0" mnemonicParsing="false" onMouseClicked="#cancelTheChange" prefHeight="40.0" prefWidth="105.0" text="Cancel">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <TableView fx:id="savedArmyTable" layoutX="528.0" layoutY="417.0" prefHeight="312.0" prefWidth="280.0">
              <columns>
                <TableColumn fx:id="savedName" prefWidth="192.0" text="Army Name" />
                <TableColumn fx:id="savedPoint" prefWidth="86.0" text="Points" />
              </columns>
            </TableView>
            <Label layoutX="628.0" layoutY="390.0" text="Saved Army">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="deleteButton" layoutX="751.0" layoutY="737.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="53.0" text="Delete" />
            <Button fx:id="importButton" alignment="CENTER" layoutX="15.0" layoutY="390.0" mnemonicParsing="false" prefHeight="89.0" prefWidth="103.0" text="Import From the Clipboard" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
